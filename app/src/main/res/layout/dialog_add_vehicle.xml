<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/textNamaVeh"
        android:text="Tambah Kendaraan"
        android:textColor="#172646"
        android:fontFamily="@font/mm"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_gravity="center"/>


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/txtMerkVeh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="Merk Kendaraan" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/txtTipeVeh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Tipe Kendaraan" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btnTambahVeh"
        android:text="Tambah"
        android:textAllCaps="false"
        android:background="#FFE074"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textColor="#80744B"
        android:layout_width="match_parent"
        android:clickable="true"
        android:layout_height="wrap_content" />


</LinearLayout>