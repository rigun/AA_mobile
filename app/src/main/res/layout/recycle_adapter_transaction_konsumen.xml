<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewAdapterTrans"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_horizontal_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/transNumberKonsumen"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Number"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/totalServiceTransKonsumen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Total Service"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/totalSparepartTransKonsumen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Total Sparepart"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/paymentTransKonsumen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Payment"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/diskonTransKonsumen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Diskon"
                android:textSize="16sp" />

        </LinearLayout>


        <Button
            android:id="@+id/btnShowStatusTransactionKonsumen"
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="130dp"
            android:textAllCaps="false"
            android:text="Selesai"
            android:textSize="10dp"
            android:clickable="false"
            android:background="@drawable/btn_progres_selesai">

        </Button>

    </android.support.v7.widget.CardView>

</LinearLayout>